{
	"name": "personafrontend",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && cd ./PersonaAPI && .\\node_modules\\.bin\\tsup && node fixdist.js && cd ..",
		"preview": "vite preview",
		"prod": "node ./PersonaAPI/dist/index.js",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"tsup": "cd ./PersonaAPI && .\\node_modules\\.bin\\tsup && node fixdist.js && cd .."
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^4.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/dompurify": "^3.0.5",
		"@types/editorjs__header": "^2.6.3",
		"@types/eslint": "8.56.0",
		"@types/node": "^20.11.16",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"sass": "^1.70.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-static": "^3.0.1",
		"axios": "^1.6.7",
		"chart.js": "^4.4.1",
		"dayjs": "^1.11.10",
		"dompurify": "^3.0.8",
		"email-validator": "^2.0.4",
		"filepond": "^4.30.6",
		"isomorphic-dompurify": "^2.3.0",
		"marked": "^12.0.0",
		"socket.io-client": "^4.7.4",
		"svelte-filepond": "^0.2.2"
	}
}
